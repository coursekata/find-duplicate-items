{
  "name": "@coursekata/find-duplicate-items",
  "description": "GitHub Action to find duplicate items in CourseKata courses.",
  "version": "2.0.0",
  "author": "Adam Blake <adam@coursekata.org>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coursekata/find-duplicate-items.git"
  },
  "bugs": {
    "url": "https://github.com/coursekata/find-duplicate-items/issues"
  },
  "keywords": [
    "coursekata",
    "actions",
    "validate",
    "duplicate"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/glob": "^0.5.0",
    "dedent": "^1.5.3",
    "jsdom": "^25.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/dedent": "^0.7.2",
    "@types/jest": "^29.5.13",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/minify": "^9.1.4",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}
